	<!-- 3/ Execution JSF en mode 'developpement'. logs supplémentaires. -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>afterwork</param-value>
	</context-param>

	<welcome-file-list>
		<welcome-file>user/conseiller/index.jsp</welcome-file>
	</welcome-file-list>

	<!-- SECURITE -->

	<resource-ref>
		<description>DB Connection Test</description>
		<res-ref-name>jdbc/db_pbv4_ckkt_test</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<security-constraint>
		<display-name>Accès au Service du conseiller</display-name>
		<web-resource-collection>
			<web-resource-name>Page sécurisée du service du conseiller</web-resource-name>
			<url-pattern>/user/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>conseiller</role-name>
			<role-name>gerant</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>Accès au Service du gérant</display-name>
		<web-resource-collection>
			<web-resource-name>Page sécurisée du service du gérant</web-resource-name>
			<url-pattern>/user/gerant/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>gerant</role-name>
		</auth-constraint>
	</security-constraint>


	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Espaces membres</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/erreur.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<description>Conseiller</description>
		<role-name>conseiller</role-name>
	</security-role>
	<security-role>
		<description>Gérant</description>
		<role-name>gerant</role-name>
	</security-role>

</web-app>
